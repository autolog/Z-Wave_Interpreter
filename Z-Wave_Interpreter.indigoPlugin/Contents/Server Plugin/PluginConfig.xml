<?xml version="1.0"?>
<PluginConfig>
    <SupportURL>https://forums.indigodomo.com/viewforum.php?f=66</SupportURL>
    <Field id="description" type="label">
        <Label>This Plugin interprets Z-Wave messages sent and received by Indigo. ðŸ˜„</Label>
    </Field>
    <Field id="copyright" type="label">
        <Label>Copyright Â© 2021-2022 Autolog</Label>
    </Field>

	<Field id="space_1" type="label" alwaysUseInDialogHeightCalc="true"><Label/></Field>

    <Field id="separator_1" type="separator" alwaysUseInDialogHeightCalc="true"/>

    <Field id="header_1" type="label" alwaysUseInDialogHeightCalc="true" fontColor="green">
        <Label>DEBUG LOGGING</Label>
    </Field>

	<Field id="space_2" type="label" alwaysUseInDialogHeightCalc="true"><Label/></Field>

	<Field id="indigoEventLogDebug" type="checkbox" defaultValue="false" alwaysUseInDialogHeightCalc="true">
		<Label>Indigo Event Log:</Label>
		<Description>Output debug messages to Indigo Event Log</Description>
	</Field>

	<Field id="space_3" type="label" alwaysUseInDialogHeightCalc="true"><Label/></Field>

	<Field id="pluginLogDebug" type="checkbox" defaultValue="false" alwaysUseInDialogHeightCalc="true">
