	</Field>

	<Field id="space_4" type="label" alwaysUseInDialogHeightCalc="true"><Label/></Field>

	<Field id="eventLogLevel" type="menu" defaultValue="20" hidden="true">
		<Label>Logging Level - Indigo Event Log:</Label>
		<List>
			<Option value="5">Debug Logging</Option>
			<Option value="10">Z-Wave Logging [Default]</Option>
			<Option value="20">No Z-Wave Logging</Option>
		</List>
	</Field>

	<Field id="pluginLogLevel" type="menu" defaultValue="20" hidden="true">
		<Label>Logging Level - Plugin Event Log:</Label>
		<List>
			<Option value="5">Debug Logging</Option>
			<Option value="10">Z-Wave Logging [Default]</Option>
			<Option value="20">No Z-Wave Logging</Option>
		</List>
	</Field>

